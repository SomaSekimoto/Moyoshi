!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Moyoshi
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header.navbar.navbar-expand-lg.bg-primary.row.shadow-sm.fixed-top.px-5
      %h5.col
        = link_to "Moyoshi", "/", class: "app-name__logo text-decoration-none text-center text-white"
      .col-auto
        = form_for search_posts_path, {class: "search-form d-sm-inline-block", local: true} do |f|
          .input-group
            = f.text_field :keyword, placeholder: "検索する", class: "rounded search-input col-auto"
            .input-group-append
              %button.btn.btn-info.rounded
                .fas.fa-search.fa-sm
      .col.text-right
        - if user_signed_in?
          = link_to "#{current_user.name}", new_user_registration_path, class: "edit-user user-btn text-decoration-none mr-3 text-white"
          = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "user-logout user-btn text-decoration-none text-white"
        - else
          = link_to "新規登録", new_user_registration_path, class: "new-user user-btn text-decoration-none mr-3 text-white"
          = link_to "ログイン", new_user_session_path, class: "user-login user-btn text-decoration-none text-white"
    
    = yield


    %footer.bg-primary.sticky-bottom
      .text-center.py-3
        = link_to "トップに戻る", root_path, class: "text-white text-decoration-none"
      %copyright
        .text-center
          copyright
