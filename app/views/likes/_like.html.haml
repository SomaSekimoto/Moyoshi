.like-link{id: "like-link-#{post.id}"}
  - if user_signed_in? && current_user.likes.find_by(post_id: post.id)
    = link_to unlike_path(post.id), class: "likes", method: :delete, remote: true do
      .iine__button
        %i.fas.fa-thumbs-up
      .likes-count
        = post.likes.count
  - else 
    = link_to like_path(post.id), class: "likes", method: :post, remote: true do
      .iine__button
        %i.far.fa-thumbs-up
      .likes-count
        = post.likes.count